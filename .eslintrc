{
  "parser": "babel-eslint",
  "plugins": [
    "import",
    "react"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:react/recommended"
  ],
  "env": {
    "es6": true,
    "node": true
  },
  "rules": {
    "prefer-arrow-callback": 2,
    "semi": [ 2, "never" ],
    "react/no-danger": 0
  },
  "globals": {
    "fetch": true
  }
}
